<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.artwellhk.alertsystem.web.alert.AlertBrowse"
        focusComponent="alertsTable"
        lookupComponent="alertsTable"
        messagesPack="com.artwellhk.alertsystem.web.alert">
    <dsContext>
        <groupDatasource id="alertsDs"
                         allowCommit="false"
                         class="com.artwellhk.alertsystem.entity.Alert"
                         datasourceClass="com.artwellhk.alertsystem.web.myDatasource.AlertListDatasource"
                         refreshMode="NEVER"/>
        <datasource id="alertTypeDs"
                    allowCommit="false"
                    class="com.artwellhk.alertsystem.entity.AlertType"
                    view="alertType-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="alertsTable"
                    height="100%"
                    width="100%">
            <columns>
                <column id="alertType"/>
                <column id="sampleOrder"/>
                <column id="fromTimestamp"/>
                <column id="lastTimestamp"/>
                <column id="timeDifference"/>
                <column id="employeeName"/>
            </columns>
            <rows datasource="alertsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true"/>
        </groupTable>
    </layout>
</window>
